<!DOCTYPE html>
<head>
    <title>List</title>
    <meta charset="utf-8" />
</head>
<body>
<h1>ОБЛІК</h1>
<p><a href="/create">Додати</a></p>
<p><a href="/indexunit">Підрозділи</a></p>
<table>
    <tr><th>Ім'я</th><th>Прізвище</th><th>По-батькові</th><th>Звання</th><th>Дата народження</th></tr>
    {{#each military}}
        <tr>
            <td>{{this.nameofmil}}</td>
            <td>{{this.lastname}}</td>
            <td>{{this.fathername}}</td>
            <td>{{this.rankof}}</td>
            <td>{{this.dob}}</td>
            <td>
                <a href="/edit/{{this.milId}}">Редагувати</a>|
                <form action="delete/{{this.milId}}" method="POST" style="display:inline;">
                    <input type="submit" value="Delete" />
                </form>
            </td>
        </tr>
    {{/each}}
</table>
</body>
